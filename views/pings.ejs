<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>List sites</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />
  </head>

  <body>
    <nav class="navbar navbar-dark bg-primary justify-content-between">
      <a class="navbar-brand text-white">Current site list</a>
      <!-- <form class="form-inline">
            <input class="form-control mr-sm-2" name="search" type="search" placeholder="Search" aria-label="Search">
        </form> -->
      <form action="logout" method="post">
        <button
          class="btn btn-outline-dark bg-dark my-2 my-sm-0 text-white"
          type="submit"
        >
          Logout
        </button>
      </form>
    </nav>

    <table
      id="sample"
      class="table table-active table-bordered"
      style="width: 99%"
    >
      <thead>
        <tr>
          <th colspan="3">Current address list</th>
          <th colspan="2">
            <a href="pings/createPing" class="btn btn-success">ADD PING</a>
          </th>
        </tr>

        <tr>
          <th>Address</th>
          <th>Status</th>
          <th>Status Text</th>
          <th>Last Successful Ping</th>
          <th>DELETE</th>
        </tr>
      </thead>
      <tbody>
        <% data.forEach(element=> { %>
        <tr>
          <td><%=element.address %></td>
          <td><%=element.status %></td>
          <td><%=element.statusText %></td>
          <td>
            <%= Number.parseFloat((new Date() - new Date(element.lastPinged)) /
            1000 / 60).toFixed(1) + " " + "Minutes ago"%>
          </td>
          <td>
            <a
              href="pings/deletePing/<%= element._id %> "
              class="btn btn-danger"
              >DELETE</a
            >
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>

    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
      integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
      integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
      crossorigin="anonymous"
    ></script>

    <!-- Adding DataTables CSS and JS -->

    <link
      rel="stylesheet"
      type="text/css"
      href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.css"
    />

    <script
      type="text/javascript"
      charset="utf8"
      src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.js"
    ></script>

    <!-- Adding jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <!-- Adding DataTables CSS and JS -->
    <link
      rel="stylesheet"
      type="text/css"
      href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.css"
    />
    <script
      type="text/javascript"
      charset="utf8"
      src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.js"
    ></script>

    <!-- Adding jQuery -->

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

    <!-- Adding DataTables CSS and JS -->

    <link
      rel="stylesheet"
      type="text/css"
      href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.css"
    />

    <script
      type="text/javascript"
      charset="utf8"
      src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.js"
    ></script>
    <script>
      $(document).ready(function () {
        $('#sample').DataTable({
          pagingType: 'full_numbers',
          searching: false,
        });
      });
    </script>
  </body>
</html>
